<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Repositorio{% endblock %}</title>
        {% block stylesheets %}

            <link rel="stylesheet" href="{{ asset('bundles/ROA/css/general.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/ROA/css/fonts.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/ROA/css/menu.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/ROA/css/cabecera.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/ROA/css/footer.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/ROA/css/columna_izq.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/ROA/css/columna_der.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/ROA/css/bootstrap2.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/ROA/css/smoothness/jquery-ui-1.10.2.custom.min.css') }}" />

            {% if app.session.get('accesibilidad') == 'alto_contraste' %}
                <link rel="stylesheet" href="{{ asset('bundles/ROA/css/alto_contraste.css') }}" />
            {% endif %}
            
        {% endblock %}

        {% block javascripts %}

            <script language="javascript" src="{{ asset('bundles/ROA/js/funciones.js') }}" type="text/javascript"></script>
            <script language="javascript" src="{{ asset('bundles/ROA/js/jquery.js') }}" type="text/javascript"></script>
            <script language="javascript" src="{{ asset('bundles/ROA/js/jquery-ui-1.10.2.custom.min.js') }}" type="text/javascript"></script>
             <script language="javascript" src="{{ asset('bundles/ROA/js/jquery.flexipage.min.js') }}" type="text/javascript"></script>
             
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>
        {% block body %}{% endblock %} 
    </body>

</html>
